@model IEnumerable<Common.Models.ProductShowModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>recently added books to our store</h2>
<div class="recent-book-sec">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="item">
                    <img src=@item.Images alt="img">
                    <h3><a href="#">@item.Name</a></h3>
                    @*<h6><span class="price">$19</span> / <a href="#">Buy Now</a></h6>*@
                </div>
            </div>
        }

    </div>
    <div class="btn-sec">
        <button class="btn gray-btn">load More books</button>
    </div>
</div>

