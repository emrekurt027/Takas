@*@model IEnumerable<Common.Domains.Product>*@
@{
    ViewBag.Title = "Home Page";
}
<script src="~/Scripts/main.js"></script>
<link href="~/Content/main.css" rel="stylesheet" />


<hr />

<!-- Hero section -->
<section class="recomended-sec">
    <div class="container">
        <div class="title">
            @*<h2>highly recommendes books</h2>*@
            <hr>
        </div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">

                    <div class="card-deck">
                        @for (int j = 0; j < 6; j++)
                        {
                            <div class="card p-3" style="width: 12rem;">
                                <img class="card-img-top" style="width:100%;  height: auto;" src="https://images.gr-assets.com/books/1327543267m/1004827.jpg" alt="Card image cap">
                            </div>
                        }
                    </div>

                </div>
                <div class="carousel-item">
                    <div class="card-deck">
                        @for (int j = 0; j < 6; j++)
                        {
                            <div class="card p-3" style="width: 12rem;">
                                <img class="card-img-top" style="width:100%;  height: auto;" src="https://images.gr-assets.com/books/1327543267m/1004827.jpg" alt="Card image cap">
                            </div>
                        }
                    </div>
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</section>
<!-- Hero section end -->
