@model IEnumerable<Common.Models.ProductShowModel>
@{
    ViewBag.Title = "Home Page";
}





<!-- Hero section -->
<section class="recomended-sec">
    <div class="container">
        <div class="title">
            @*<h2>highly recommendes books</h2>*@
            <hr>
        </div>
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @if(Model != null)
                { 
                    <div class="carousel-item active">

                        <div class="card-deck">
                           @for (int i=0; i<Model.Count()/2; i++)
                           {
                               if (Model.ElementAt(i) == null)
                               {
                                   continue;
                               }

                                <div class="card p-3" style="width: 12rem;">
                                    <a href="/Product/Details/@Model.ElementAt(i).Id"><img class="card-img-top" style="width:100%;  height: auto;" src=@Model.ElementAt(i).Images alt="Card image cap"></a>
                                </div>
                            }
                        </div>

                    </div>
                    <div class="carousel-item">
                        <div class="card-deck">
                            @for (int i = Model.Count() / 2; i < Model.Count(); i++)
                            {
                                if (Model.ElementAt(i) == null)
                                {
                                    continue;
                                }

                                <div class="card p-3" style="width: 12rem;">
                                    <a href="/Product/Details/@Model.ElementAt(i).Id"><img class="card-img-top" style="width:100%;  height: auto;" src=@Model.ElementAt(i).Images alt="Card image cap"></a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
</section>
<!-- Hero section end -->
